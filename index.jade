doctype html
meta(charset="utf-8")

link(href="style.css", rel="stylesheet")
link(href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css", rel="stylesheet")

script(src="public/components/jquery/dist/jquery.js")
script(src="public/components/bootstrap/dist/js/bootstrap.js")


.container
  .row
    .col-question
      | #{public._data.question.id}
      | !{public._data.question.question}

    .col-answers
      each answer in public._data.question.answers
        .media.media-answer
          .media-letter #{answer.label}
          .media-body
            h4.media-heading #{answer.text}

      .answer-controls
        .text-center
          .btn.btn-default.btn-xs
            .fa.fa-flag
            |  Flag Question

        .row.controls
          .col-xs-5.col-xs-offset-1
            .btn.btn-block.btn-default PREV. QUESTION
          .col-xs-5
            .btn.btn-block.btn-primary NEXT QUESTION
