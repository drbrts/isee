header.test__container
  .test__col--info
    h3.test__heading ISEE MIDDLE #1
    h1.test__heading.top SECTION1: VERBAL REASONING

  .test__col--controls
    .test__timer
      .form-group: input
      h4.no-margin TIME REMAINING

    .test__controls
      .col--half: .test__button
        i.fa.fa-pause
        | PAUSE SECTION
      .col--half: .test__button
        i.fa.fa-share-square-o
        | END SECTION


.row
  .pagination__container
    ul.pagination(ng-controller='pagination')
      li(ng-repeat='page in pages')
        a.pagination__link(href="#" class='{{page.class}}') {{$index + 1}}

.question__container(ng-controller='question')
  .question__col--main
    | {{question.id}} &nbsp;
    span(ng-bind-html='question.question')

  .question__col--answer
    .answer(ng-repeat='answer in question.answers')
      .answer__col--letter
        .answer__letter {{answer.label}}

      .answer__col--main(class='{{answer.class}}')
        h4.answer__text {{answer.text}}


    .answer__controls
      .text-center
        .btn.btn-default.btn-xs
          .fa.fa-flag  Flag Question

      .answer__footer
        .col-xs-5.col-xs-offset-1
          .btn.btn-block.btn-default PREV. QUESTION
        .col-xs-5
          .btn.btn-block.btn-primary NEXT QUESTION
